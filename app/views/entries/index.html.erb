<%= javascript_include_tag "//www.google.com/jsapi" %>
<%= javascript_include_tag "path/to/highcharts.js", "chartkick" %>
<%= javascript_include_tag "google.com/jsapi", "chartkick" %>

<html xmlns="http://www.w3.org/1999/xhtml">
    
    <!-- MENU SECTION END-->
    <div class="content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h4 class="page-head-line">Dashboard</h4>
                </div>
            </div>
           
            </div>
            <div class="row">
                 <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="dashboard-div-wrapper bk-clr-one">
                        <i  class="fa fa-venus dashboard-div-icon" ></i>
                        <div class="progress progress-striped active">
                            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%"></div>
                        </div>                  
                        <strong><%= link_to "Get Started", entries_path%></strong>
                    </div>
                </div>
                 <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="dashboard-div-wrapper bk-clr-two">
                        <i  class="fa fa-edit dashboard-div-icon" ></i>
                        <div class="progress progress-striped active">
                            <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%"></div>
                        </div>
                        <strong><%= link_to "New Entry", charttest_path%></strong>
                    </div>
                </div>
                 <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="dashboard-div-wrapper bk-clr-three">
                        <i  class="fa fa-cogs dashboard-div-icon" ></i>
                        <div class="progress progress-striped active">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"></div>
                        </div>
                        <strong><%= link_to "More Stats", entries_path%></strong>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-6">
                    <div class="dashboard-div-wrapper bk-clr-four">
                        <i  class="fa fa-bell-o dashboard-div-icon" ></i>
                        <div class="progress progress-striped active">
                            <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%"></div>
                        </div>
                        <strong><%= link_to "Contact Us", contact_path%></strong>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="notice-board">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3>History</h3>
                                <div class="pull-right" >
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Entry Date</th>
                                    <th>Status</th>
                                    <th>Options</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @entries.each do |entry| %>
                                    <tr>
                                        <td><%= entry.date.month %> - <%= entry.date.year %></td>
                                        <% if home_data?(entry) && car_data?(entry) && entry.diet_type? %>
                                            <td><a href= "/entries/<%=entry.id.to_s%>/edit" class="btn btn-info btn-xs">OK, edit</a></td>
                                        <% else %>
                                            <td><a href= "/entries/<%=entry.id.to_s%>/edit" class="btn btn-warning btn-xs">Info needed</a></td>
                                        <% end %>
                                        <td><a href= "/entries/<%=entry.id.to_s%>" class="btn btn-success btn-xs">View</a></td>
                                        <td><a href= "/charttest" class="btn btn-danger btn-xs">Delete</a></p></td>
                                    <% end %>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                        
                                                    <div class="panel-footer">
                                <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">New Entry</button>
                            </div>
                        </div>
                    </div>
                    <hr />
    

                
                <div class="col-md-8">
                    <div class="notice-board">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3>Monthly Carbon Footprint (lbs CO2)</h3>
                            </div>
                            <div class="panel-body">
                                <!-- prep column chart data -->
                                <% home_data(current_user, @home_data) %>
                                <% car_data(current_user, @car_data) %>
                                <% diet_data(current_user, @diet_data) %>
                                <% @data = [ {name: "Home", data: @home_data}, {name: "Car", data: @car_data}, {name: "Diet", data: @diet_data} ] %>
                                
                                <!-- column chart -->
                                <%= column_chart @data, stacked: true %>  
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>                      
        </div>
    </div>

</body>
</html>